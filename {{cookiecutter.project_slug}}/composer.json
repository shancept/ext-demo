{
    "name": "plesk/ext-{{cookiecutter.extension_id}}",
    "description": "{{cookiecutter.extension_description}}",
    "type": "project",
    "license": "Apache-2.0",
    "require": {
        "php": ">=8.0.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "shancept/flex": "2.x-dev",
        "symfony/console": "6.0.*",
        "symfony/dotenv": "6.0.*",
        "symfony/framework-bundle": "6.0.*",
        "symfony/runtime": "6.0.*",
        "symfony/yaml": "6.0.*"
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/shancept/flex.git"
        }
    ],
    "require-dev": {
        "plesk/pm-api-stubs": "^18.0"
    },
    "autoload": {
        "psr-4": {
            "PleskExt\\{{cookiecutter.extension_id.capitalize()}}\\": [
                "src/plib/library/",
                "modules/{{cookiecutter.extension_id}}/library/"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PleskExt\\{{cookiecutter.extension_id.capitalize()}}\\": ["src/plib/library/"],
            "PleskExt\\{{cookiecutter.extension_id.capitalize()}}\\Test\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "symfony/runtime": true,
            "shancept/flex": true
        },
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "vendor-dir": "src/plib/vendor"
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*"
    },
    "scripts": {
        "auto-scripts": {
            "sh run.sh": "script",
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "6.0.*"
        },
        "bin-dir": "src/plib/bin",
        "config-dir": "../src/plib/config",
        "var-dir": "src/plib/var",
        "src-dir": "../src/plib/library",
        "public-dir": "src/htdocs",
        "runtime": {
            "dotenv_path": "src/plib/.env"
        }
    }
}
