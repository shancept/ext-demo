{
    "name": "plesk/ext-demo",
    "description": "Plesk demo extension",
    "type": "project",
    "license": "Apache-2.0",
    "require": {
        "php": ">=8.0.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "shancept/flex": "2.x-dev"
    },
    "flex-require": {
        "symfony/console": "*",
        "symfony/dotenv": "*",
        "symfony/framework-bundle": "*",
        "symfony/runtime": "*",
        "symfony/yaml": "*"
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/shancept/flex.git"
        }
    ],
    "require-dev": {
    },
    "autoload": {
        "psr-4": {
            "PleskExt\\Demo\\": [
                "src/plib/library/",
                "modules/demo/library/",
                "src/plib/cache",
                "modules/demo/cache"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PleskExt\\Demo\\": [
                "src/plib/library/",
                "src/plib/cache"
            ],
            "PleskExt\\Demo\\DI\\": "src/dev/DI/",
            "PleskExt\\Demo\\Test\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "symfony/runtime": true,
            "shancept/flex": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "vendor-dir": "src/plib/vendor"
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*"
    },
    "scripts": {
        "setup": "sh run.sh",
        "auto-scripts": {
            "run-setup": "@composer setup",
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "6.0.*"
        },
        "bin-dir": "src/plib/bin",
        "config-dir": "src/plib/config",
        "var-dir": "src/plib/var",
        "src-dir": "src/plib/library",
        "public-dir": "src/htdocs",
        "runtime": {
            "dotenv_path": "src/plib/.env"
        }
    }
}
