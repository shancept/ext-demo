{
  "name": "plesk/ext-demo",
  "description": "Plesk demo extension",
  "type": "project",
  "license": "Apache-2.0",
  "require": {
    "php": ">=8.0.2",
    "ext-ctype": "*",
    "ext-iconv": "*",
    "symfony/flex": "^2"
  },
  "flex-require": {
    "symfony/console": "6.0.*",
    "symfony/dotenv": "6.0.*",
    "symfony/framework-bundle": "6.0.*",
    "symfony/runtime": "6.0.*",
    "symfony/yaml": "6.0.*"
  },
  "require-dev": {
  },
  "autoload": {
    "psr-4": {
      "PleskExt\\Demo\\": [
        "src/plib/library/",
        "modules/demo/library/",
        "src/plib/cache",
        "modules/demo/cache"
      ]
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PleskExt\\Demo\\": ["src/plib/library/", "src/plib/cache"],
      "PleskExt\\Demo\\DI\\": "src/dev/DI/",
      "PleskExt\\Demo\\Test\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "composer/package-versions-deprecated": true,
      "symfony/flex": true,
      "symfony/runtime": true
    },
    "optimize-autoloader": true,
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true,
    "vendor-dir": "src/plib/vendor"
  },
  "replace": {
    "symfony/polyfill-ctype": "*",
    "symfony/polyfill-iconv": "*",
    "symfony/polyfill-php72": "*",
    "symfony/polyfill-php73": "*",
    "symfony/polyfill-php74": "*",
    "symfony/polyfill-php80": "*"
  },
  "scripts": {
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install %PUBLIC_DIR%": "symfony-cmd"
    },
    "post-install-cmd": [
      "@auto-scripts"
    ],
    "post-update-cmd": [
      "@auto-scripts"
    ]
  },
  "conflict": {
    "symfony/symfony": "*"
  },
  "extra": {
    "symfony": {
      "endpoint": [
        "https://api.github.com/repos/shancept/plesk_recipe/contents/index.json",
        "flex://defaults"
      ],
      "allow-contrib": false,
      "require": "6.0.*"
    },
    "bin-dir": "src/plib/bin",
    "config-dir": "src/plib/config",
    "var-dir": "src/plib/var",
    "src-dir": "src/plib/library",
    "public-dir": "src/htdocs",
    "runtime": {
      "dotenv_path": "src/plib/.env"
    }
  }
}
